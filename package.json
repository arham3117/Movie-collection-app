{
  "name": "movies-app",
  "version": "1.0.0",
  "description": "A simple movie database application",
  "main": "src/server/index.js",
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "nodemon src/server/index.js",
    "setup": "npx prisma generate && npx prisma migrate deploy",
